<div class="register">
    <form class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-3"></div>
            <label for="inputEmail3" class="col-sm-1 control-label">Invite Code</label>
            <div class="col-sm-4">
            <input type="text" class="form-control" id="invite" placeholder="Invite Code">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3"></div>
            <label for="inputEmail3" class="col-sm-1 control-label">Username</label>
            <div class="col-sm-4">
            <input type="text" class="form-control" id="username" placeholder="Email">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-3"></div>
            <label for="inputPassword3" class="col-sm-1 control-label">Password</label>
            <div class="col-sm-4">
            <input type="password" class="form-control" id="password" placeholder="Password">
            </div>
        </div>
    <div class="form-group">
            <div class="col-sm-3"></div>
            <div class="col-sm-offset-2 col-sm-4">
            <button type="button" class="btn btn-default" id="ok">Register</button>
            <button type="reset" class="btn btn-default">Reset</button>
            </div>
        </div>
    </form>
</div>
    <script type="text/javascript">
        $('#ok').click(function () {
            var invite = $('#invite').val();
            var username = $('#username').val();
            var password = $('#password').val();
            $.ajax({
                url: '/register',
                type: 'POST',
                data: {"invite": invite,  "username": username, "password": password},
                success: function(data) {
                    if (data.result == 0) {
                        alert("exist");
                    } else if (data.result == 1) {
                        window.location.href = '/login';
                    }
                }
            })
        })
    </script>
</div>
